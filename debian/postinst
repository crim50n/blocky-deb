#!/bin/sh
set -e

case "$1" in
    configure)
        if ! getent passwd blocky >/dev/null; then
            adduser --system --group --no-create-home --home /nonexistent blocky
        fi

        mkdir -p /etc/blocky
        chown blocky:blocky /etc/blocky
        chmod 755 /etc/blocky

        # Create default config if not exists
        if [ ! -f /etc/blocky/config.yml ]; then
            if [ -f /usr/share/blocky/config.yml.gz ]; then
                zcat /usr/share/blocky/config.yml.gz > /etc/blocky/config.yml
            elif [ -f /usr/share/blocky/config.yml ]; then
                cp /usr/share/blocky/config.yml /etc/blocky/config.yml
            fi
            if [ -f /etc/blocky/config.yml ]; then
                chown blocky:blocky /etc/blocky/config.yml
                chmod 644 /etc/blocky/config.yml
                echo "Created default Blocky configuration at /etc/blocky/config.yml"
            fi
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
